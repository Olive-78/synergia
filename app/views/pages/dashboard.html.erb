<div>
  <div class="display-width">
    <div class="dashboard-card">
      <!-- <i class="fas fa-check-circle"></i>
      <i class="fas fa-times-circle"></i> -->
      <div class="card-title">
        <h6>Mon prochain rendez-vous</h6>
      </div>
      <div class="user-info">
        <div class="medium-avatar">
          <%= cl_image_tag(@user_next_meeting.photo.key, class: "avatar-large")%>
        </div>
        <div class="user-details">
          <p><strong><%= @user_next_meeting.first_name%> <%= @user_next_meeting.last_name %></strong></p>
          <p><%= @user_next_meeting.company_name %></p>
        </div>
      </div>
      <div class="meeting-info">
        <p><%= @next_meeting.venue_name %></p>
        <p><%= @next_meeting.date %></p>
      </div>
      <div class="center">
        <%= link_to "En savoir plus", meeting_path(@next_meeting) %>
      </div>
    </div>

      <div class="dashboard-card">
        <div class="card-title">
          <h6>Mon dernier rendez-vous</h6>
        </div>
        <div class="user-info">
          <div class="medium-avatar">
            <%= cl_image_tag(@user_last_meeting.photo.key, class: "avatar-large")%>
          </div>
          <div class="user-details">
            <p><strong><%= @user_last_meeting.first_name%> <%= @user_last_meeting.last_name %></strong></p>
            <p><%= @user_last_meeting.company_name %></p>
          </div>
        </div>
        <div class="center">
          <%= link_to "Laisser un commentaire", new_user_review_path(@last_meeting) %>
        </div>
    </div>

    <div class="dashboard-card text-center">
      <div class="availabilities-title">
        <div class="card-title availabilities-header">
          <h6>Mes disponibilit√©s</h6>
          <%= link_to availabilities_path, class:'pencil-icon'  do %>
            <%= image_tag 'pencil.png', class:"pencil-2" %>
          <% end %>
        </div>
      </div>
      <div class="dashboard-availabilities">
        <% @availabilities.each do |availability|%>
          <% if availability.breakfast || availability.lunch || availability.afterwork %>
            <div>
              <div>
                <p><strong><%= Date::DAYNAMES[availability.week_day][0..1] %></strong></p></div>
              </div>
          <% else %>
          <div><p><%= Date::DAYNAMES[availability.week_day][0..1] %></p></div>
          <% end %>
        <% end %>
      </div>
      <div class="dashboard-availabilities">
        <% @availabilities.each do |availability|%>
          <div class="icon-avail">
            <% if availability.breakfast %>
              <i class="fas fa-coffee icon-active"></i>
              <br>
            <% else %>
              <i class="fas fa-coffee icon-inactive"></i>
              <!-- <br> -->
            <% end %>
            <% if availability.lunch %>
              <i class="fas fa-hamburger icon-active"></i>
              <!-- <br> -->
            <% else %>
              <i class="fas fa-hamburger icon-inactive"></i>
              <!-- <br> -->
            <% end %>
            <% if availability.afterwork %>
              <i class="fas fa-beer icon-active"></i>
              <!-- <br> -->
            <% else %>
              <i class="fas fa-beer icon-inactive"></i>
              <!-- <br> -->
            <% end %>
            <%#= availability.lunch %>
            <%#= availability.afterwork %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- <div class="dashboard-card"> flexbox
      <div>
        <i class="fas fa-users"></i>
        <p>coucou</p>
      </div>
      <div>
        <i class="fas fa-handshake"></i>
        <p>Coucou</p>
      </div>
    </div>
  </div> -->
</div>
