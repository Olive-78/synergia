<%= simple_form_for(@availability) do |f| %>
  <%= f.label "Wich days are you available :" %>&nbsp;
  <% Date::DAYNAMES.each do |day| %>
    <%= f.check_box :week_day, {}, day %>
    <%= day %>
  <% end %>
  <%= f.input :start_time, placeholder: 'Start-time' %>
  <%= f.input :end_time, placeholder: 'End-time' %>
  <%= f.submit 'Add my new disponibilites' %>
<% end %>
